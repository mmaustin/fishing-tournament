<br>
<p>Sign up below, Angler!</p><br>

<%= form_for @angler do |f|%>
    <%= f.label :username%>:
    <%= f.text_field :username%><br>
    <%= f.label :email%>:
    <%= f.text_field :email%><br>
    <%= f.label :password%>:
    <%= f.password_field :password%><br>
    <%= f.label :hometown%>:
    <%= f.text_field :hometown%><br>
    <%= f.label :age%>:
    <%= f.number_field :age%><br>
    <%= f.label :catch_weight%>:
    <%= f.number_field :catch_weight%><br>
    <%= f.submit 'Sign Up'%>
<%end%><br>

<% if logged_in?%>
    <%= current_user.name%>
<% else%>
    <h3>No angler is logged in</h3>
<%end%>
