<br>
<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %><br>

<h3>Your Championship Anglers in order of their current position!</h3><br>

<% @anglers.each do |angler|%>
  <% if angler == current_user%>
    <p><%= angler.username%> has a total of <%=angler.catch_weight%> pounds of fish. <%= link_to 'Your Page', angler_path(angler)%></p><br>
  <% else%>
    <p><%= angler.username%> has a total of <%=angler.catch_weight%> pounds of fish.</p><br>
  <%end%>
<%end%>