<br>
<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %><br>

<h1>Eagle's Claw</h1>
<h3>The Number 1 Tournament Fishing App in Brooklyn!</h3><br>

<% if !logged_in?%>
  <h3>Sign up or Log in</h3><br>
  <%= link_to 'Sign Up', 'signup'%> ||
  <%= link_to 'Log In', '/login'%><br><br>

  <h3>Or log in through Facebook</h3><br>
  <%= link_to('Log in with Facebook!', '/auth/facebook', method: :post) %><br>
<%else%>
  <%= link_to 'Your Page', angler_path(current_user)%> ||
  <%= link_to 'Log Out', '/logout'%><br>
<%end%>

<% if logged_in?%>
    <p><%= current_user.username%> is currently logged in.</p>
<% else%>
    <p>No angler is currently logged in.</h3>
<%end%>